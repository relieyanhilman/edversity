    <title>ed.admin - Login</title>

    <!-- Custom fonts for this template-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet"/>

    <!-- Custom styles for this template-->
    <link rel="stylesheet" href="../css/admin/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"/>
    <link rel="shortcut icon" href="../IMG/logo-admin.png" type="image/x-icon" />
  </head>

  <body class="bg-gradient-primary">
    <div class="container">

      <!-- Outer Row -->
      <div class="row justify-content-center align-items-center" style="height: 100vh" >
        <div class="card o-hidden border-0 shadow-lg my-5" style="width: 20rem">
          <div class="card-body p-0">

            <!-- Nested Row within Card Body -->
            <div class="row">

              <% if (success && success.length) { %>
              <div class="alert alert-success alert-dismissible fade show" role="alert" >
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
              <% } %> <% if (error && error.length) { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert" >
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
              <% } %>

              <div class="col-lg-12">
                <div class="p-5">

                  <div class="text-center">
                    <h1 class="h2 text-gray-900 mb-4">ed.admin</h1>
                  </div>

                  <form class="user" method="POST" action="/admin/login">
                    <div class="form-group">
                      <input type="text" class="form-control form-control-user" name="username" id="username" placeholder="Username" />
                    </div>
                    <div class="form-group">
                      <input type="password" class="form-control pw form-control-user" name="password" id="password" placeholder="Password" />
                    </div>
                    <hr />
                    <button class="btn login-btn btn-primary btn-user btn-block" type="submit">Login</button>
                  </form>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

