  <!-- Carousel -->
  <section>
    <div class="container mt-5">
      <% if (success && success.length) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
          <% if (error && error.length) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
              <div id="carouselCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                  <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                  <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                  <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="/IMG/01.png" class="d-block w-100" alt="..." />
                    <div class="carousel-caption d-none d-md-block"></div>
                  </div>
                  <div class="carousel-item">
                    <img src="/IMG/02.png" class="d-md-block w-100" alt="..." />
                    <div class="carousel-caption d-none d-md-block"></div>
                  </div>
                  <div class="carousel-item">
                    <img src="/IMG/03.png" class="d-block w-100" alt="..." />
                    <div class="carousel-caption d-none d-md-block"></div>
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselCaptions"
                  data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselCaptions"
                  data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
    </div>
  </section>

  <!-- Kelas yang sudah di buka -->

  <section class="pt-1 pb-2">
    <div class="container">
      <div class="row">
        <div class="col-6">
          <h4 class="mb-3 text-light">Kelas yang sudah dibuka</h4>
        </div>
        <div class="col-6 text-right">
          <a class="btn btn-dark mb-3 mr-1" href="#daftarKelasCarousel" role="button" data-slide="prev">
            <i class="fa fa-arrow-left"></i>
          </a>
          <a class="btn btn-dark mb-3" href="#daftarKelasCarousel" role="button" data-slide="next">
            <i class="fa fa-arrow-right"></i>
          </a>
        </div>

        <div class="col-12">
          <div id="daftarKelasCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner kelas-dibuka">
              <% for( let index=0; index < courseInfo.length; index+=3 ) { %>
                <% if (index < 3 ) { %>
                  <div class="carousel-item active">
                <% } else { %>
                  <div class="carousel-item">
                <% } %>
                  <div class="row">
                    <% for( let i=index; i < index+3 && i < courseInfo.length; i++ ) { %>
                      <% if (courseInfo[i]) { %>
                        <div class="col-md-4 mb-3">
                          <a href="/kelas/<%= courseInfo[i].course_id %> " class="card-kelas">
                            <div class="card">
                              <img class="img-fluid" alt="100%x280" src="/IMG/bg-buka_kelas.jpg" />
                              <div class="card-body bg-light">
                                <div class="row">
                                  <div class="col-md-3">
                                    <!-- foto profil -->
                                    <% if (courseInfo[i].foto_profil_mentor) { %>
                                      <img class="foto-profil" src="/<%= courseInfo[i].foto_profil_mentor %> " alt="foto-profil" width="90px" height="90px"/>
                                    <% } else { %>
                                        <img class="foto-profil" src="/IMG/foto-profl-placeholder.png" alt="foto-profil" width="90px"/>
                                    <% } %>
                                  </div>
                                  <div class="col ms-3">
                                    <h6 class="mb-0">
                                      <%= courseInfo[i].program_studi %>
                                    </h6>
                                    <h5 class="mb-0">
                                      <%= courseInfo[i].mata_kuliah %>
                                    </h5>
                                    <p class="mb-3 p-0">
                                      <%= courseInfo[i].nama_mentor %>
                                    </p>
                                    <div style="line-height: 0.3">
                                      <p>
                                        <%= courseInfo[i].tanggal_kelas %>
                                      </p>
                                      <p>
                                        <%= courseInfo[i].waktu_kelas %> WIB
                                      </p>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </a>
                        </div>
                      <% } %>
                    <% } %>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Kelas yang sudah di buka (berdasarkan fakultas) -->
  <!-- Fakultas A -->
  <% mostPopularProdi.forEach((prodi, index) => { %>
    <section class="pt-2 pb-2">
      <div class="container">
        <div class="row">
          <div class="col-6">
            <h4 class="mb-3 text-light">Mata Kuliah Program Studi <%= prodi.program_studi %> </h4>
          </div>
          <div class="col-6 text-right">
            <a class="btn btn-dark mb-3 mr-1" href="#carouselControls<%= index %>" role="button" data-slide="prev">
              <i class="fa fa-arrow-left"></i>
            </a>
            <a class="btn btn-dark mb-3" href="#carouselControls<%= index %>" role="button" data-slide="next">
              <i class="fa fa-arrow-right"></i>
            </a>
          </div>
          <div class="col-12">
            <div id="carouselControls<%= index %>" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner programA">
                
                <% for( let idx=0; idx < prodiCourses[index].length; idx+=3 ) { %>
                  <% if (idx < 3 ) { %>
                    <div class="carousel-item active">
                  <% } else { %>
                    <div class="carousel-item">
                  <% } %>
                    <div class="row">
                      <% for( let i=idx; i < idx+3 && i < prodiCourses[index].length; i++ ) { %>
                        <% if (prodiCourses[index][i]) { %>
                          <div class="col-md-4 mb-3">
                            <a href="/kelas/<%= prodiCourses[index][i].course_id %> " class="card-kelas">
