                                      <% } else { %>
                                          <img class="foto-profil" src="/IMG/foto-profl-placeholder.png" alt="foto-profil" width="90px"/>
                                      <% } %>
                                    </div>
                                    <div class="col ms-3">
                                      <h6 class="mb-0">
                                        <%= prodiCourses[index][i].program_studi %>
                                      </h6>
                                      <h5 class="mb-0">
                                        <%= prodiCourses[index][i].mata_kuliah %>
                                      </h5>
                                      <p class="mb-3 p-0">
                                        <%= prodiCourses[index][i].nama_mentor %>
                                      </p>
                                      <div style="line-height: 0.3">
                                        <p>
                                          <%= prodiCourses[index][i].tanggal_kelas %>
                                        </p>
                                        <p>
                                          <%= prodiCourses[index][i].waktu_kelas %> WIB
                                        </p>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </a>
                          </div>
                        <% } %>
                      <% } %>
                    </div>
                  </div>
                <% } %>
  
  
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% }) %>
