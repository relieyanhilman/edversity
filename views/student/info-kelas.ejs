  <!-- Navbar ; -->

  <div class="container" style="margin-bottom: 24px;">
    <div class="row">
      <a href="javascript:history.back()" class="text-light"><i
          class="pe-2 text-light fa fa-chevron-left"></i>Kembali</a>
    </div>
    <div class="inner-container rounded bg-light">
      <div class="row mt-4">
        <div class="col-md-8 detail-kelas px-5 py-5">
          <!-- Program Studi -->
          <h4 class="fw-bold">
            <%= currentKelas.mata_kuliah %>
              <% if (currentKelas.tipe_kelas=='private' ) { %> <i class="fa fa-lock fs-5"></i>
                <% } %>
          </h4>
          <!-- Mata Kuliah -->
          <p class="text-secondary">
            <%= currentKelas.program_studi %>
          </p>
          <h5 class="primary-color mt-2">Deskripsi Materi</h5>
          <div class="bg-primary-color mb-4" style="width: 25%; height: 4px;"></div>
          <!-- Isi Deskripsi Materi -->
          <p>
            <%= currentKelas.deskripsi_materi %>
          </p>
          <!-- Tanggal Kelas -->
          <div class="bg-primary-color rounded py-1">
            <h5 style="text-align: center;" class="mt-1 text-light">
              <%= currentKelas.tanggal_kelas %><span> â€¢ <%= currentKelas.waktu_kelas %> WIB</span>
            </h5>
          </div>
          <% if (currentUserRegistered && currentKelas.link_zoom) { %>
            <div class="bg-primary-color rounded py-1 my-3">
              <h5 style="text-align: center;" class="mt-1 text-light">
                Link Zoom: <span><u><a href="<%= currentKelas.link_zoom %>" class="text-light"><%= currentKelas.link_zoom %></a></u></span>
              </h5>
            </div>
          <% } %>
        </div>
        <!-- Gambar yang berkaitan dengan program studi/jurusan -->
        <div class="col-md-4 px-5 py-5">
          <img class="img-fluid" src="/IMG/struktur-bangunan.jpg" alt="Struktur Bangunan" />
        </div>
      </div>
      <div class="row px-5 py-3">
        <div class="col-md-8 mb-5 py-2">
          <!-- File Deskripsi Materi -->
          <img class="img-fluid w-100" src="/IMG/blur.png" alt="File Materi">
          <!-- Modifikasi ketika user punya akses -->
          <button data-bs-toggle="modal" data-bs-target="#acces-denied"
            class="btn mt-3 text-light bg-primary-color w-100"><i class="fa fa-file"></i>Lihat atau Download
            File</button>
        </div>
        <div class="col mt-2 px-4 py-2" style="text-align: center;">
          <h5>Ikut Kelas</h5>
          <center>
            <div class="bg-primary-color mb-4" style="width: 25%; height: 4px;"></div>
          </center>
          <div class="ikut-kelas">
            <div class="row">
              <div class="col-md-4">
                <i class="fa fa-user-circle" style="font-size: 5rem;"></i>
              </div>
              <div class="col mt-2">
                <h5 class="text-start">Troy</h5>
                <p class="text-secondary text-start">Ketua Kelas</p>
              </div>
            </div>
            <% if (currentKelas.tipe_kelas=='private' ) { %>
              <div class="row mt-2">
                <p class="text-secondary" style="text-align: start;">
                  *) Cat: Kelas ini merupakan kelas private, maka untuk dapat bergabung ke dalam kelas ini memerlukan
                  persetujuan dari ketua kelas.
                </p>
              </div>
              <% } %>
              <% if (currentUserRegistered == null) { %>
                <div class="row mt-3">
                  <button data-bs-toggle="modal" data-bs-target="#ikut-kelas" class="btn  bg-primary-color text-light"
                    style="margin-top: 13px;">Ikut Kelas</button>
                </div>
              <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal ketika user tidak punya akses ke file -->
  <div class="modal fade notif-modal" id="acces-denied" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
          <h5 class="mb-1">Akses Gagal</h5>
          <div class="bg-primary-color mb-4" style="width: 50%; height: 4px;"></div>
          <h6 class=" fs-5 mb-4">Kamu harus gabung kelas untuk dapat mengakses file</h6>
          <div class="row justify-content-end">
            <div class="d-flex justify-content-end">
              <a class="me-2 btn bg-primary-color text-light btn-lg" data-bs-dismiss="modal">Ok</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal ketika user klik "ikut kelas" -->
  <div class="modal fade notif-modal" id="ikut-kelas" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body">
          <h5 class="mb-1">Ikut Kelas</h5>
          <div class="bg-primary-color mb-4" style="width: 50%; height: 4px;"></div>
          <h6 class=" fs-5 mb-4">Kelas yang kamu ajukan adalah kelas private, untuk bisa masuk kamu harus menunggu
            perizinan pembuat kelas</h6>
          <div class="row justify-content-end">
            <div class="d-flex justify-content-end">
              <a class="me-2 btn primary-outline primary-color btn-lg" data-bs-dismiss="modal">Batal</a>
              <a class="me-2 btn bg-primary-color text-light btn-lg">Ok</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
